{
  "ignoreFiles": "src/css/vendor/**",
  "plugins": [
    "stylelint-selector-bem-pattern"
  ],
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-bem-pattern": { "preset": "bem" },
    "block-no-empty": null,
    "at-rule-empty-line-before": null,
    "rule-non-nested-empty-line-before": null
  }
}
